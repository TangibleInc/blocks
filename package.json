{
  "name": "tangible-blocks",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "roll dev",
    "build": "roll build",
    "format": "roll format",
    "deps": "roll install",
    "archive": "roll archive && rm -rf publish/tangible-loops-and-logic && unzip publish/tangible-loops-and-logic.zip -d publish/ && npm run test:archive",
    "// Test": "",
    "test": "roll run tests/index.ts",
    "test:all": "npm run test && npm run test:8.3 && npm run e2e",
    "test:8.3": "roll run tests/index.ts PHP_VERSION=8.3",
    "test:archive": "roll run tests/index.ts TEST_ARCHIVE=1",
    "tdd": "npm run e2e:watch",
    "e2e": "playwright test --config tests/playwright.config.js",
    "e2e:debug": "playwright test --config tests/playwright.config.js --debug",
    "e2e:install": "playwright install chromium",
    "e2e:ui": "playwright test --config tests/playwright.config.js --ui",
    "e2e:watch": "chokidar 'tests/e2e/**/*.js' --initial --silent -c 'playwright test -- --retries=0'",
    "-- Local environment --": "https://developer.wordpress.org/block-editor/reference-guides/packages/packages-env",
    "env": "wp-env",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:destroy": "wp-env destroy",
    "env:clean": "wp-env clean all",
    "env:test": "PLUGIN=tangible-blocks; wp-env run tests-cli wp plugin activate $PLUGIN && wp-env run tests-wordpress /var/www/html/wp-content/plugins/$PLUGIN/vendor/bin/phpunit --testdox -c /var/www/html/wp-content/plugins/$PLUGIN/phpunit.xml --verbose",
    "env:test:7.4": "WP_ENV_PHP_VERSION=7.4 wp-env start && npm run env:test",
    "env:test:8.2": "WP_ENV_PHP_VERSION=8.2 wp-env start && npm run env:test"
  },
  "dependencies": {
    "@codemirror/view": "^6.4.0",
    "@react-aria/color": "^3.0.0-beta.17",
    "react-aria": "^3.20.0",
    "react-stately": "^3.18.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@tangible/now": "^1.0.8",
    "@tangible/roller": "^2.0.4",
    "@wordpress/e2e-test-utils-playwright": "^1.0.0",
    "@wordpress/env": "^10.0.0",
    "chokidar-cli": "^3.0.0",
    "testra": "^2.1.3"
  },
  "homepage": "",
  "author": "Team Tangible",
  "license": "MIT",
  "keywords": []
}
